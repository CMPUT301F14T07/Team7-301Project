<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ca.ualberta.cs.f14t07_application.AnswersActivity" >

    
	<TextView
		android:id="@+id/QuestionSubject"
    	android:layout_width="wrap_content"
  		android:layout_height="wrap_content"
  		android:layout_alignParentLeft="true"
  		android:layout_alignParentTop="true"
  		android:text="Question Subject"
  		android:textAppearance="?android:attr/textAppearanceMedium" />

	<TextView
        android:id="@+id/AnswerListIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/QuestionSubject"
        android:paddingBottom="5dp"
        android:paddingTop="10dp"
        android:text="@string/answers_indicator"
        android:textAppearance="?android:attr/textAppearanceMedium" />
     
    <ListView
        android:id="@+id/QuestionAnswerList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/AnswerListIndicator"
        android:layout_above="@+id/AddAnswerButton" >
    </ListView>
    
    
	<Button
	    android:id="@+id/AddAnswerButton"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentBottom="true"
	    android:gravity="center"
	    android:text="@string/add_answer" />
    
    
    
    
    
    
    

</RelativeLayout>
