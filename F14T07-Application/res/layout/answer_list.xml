<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

  	    <TextView
	        android:id="@+id/AnswerText"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_toRightOf="@+id/AnswerUpvoteButton"
	        android:paddingLeft="30dp"
	        android:text="Answer Text"
	        android:textAppearance="?android:attr/textAppearanceMedium" />
  	    
  	    <TextView 
	        android:id="@+id/AnswerAuthor"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/AnswerText"
	        android:layout_toRightOf="@+id/AnswerUpvoteButton"
	        android:paddingLeft="30dp"
	        android:text="Answer Author"
	        android:textAppearance="?android:attr/textAppearanceSmall" />
	     
	     <TextView 
	        android:id="@+id/AnswerDate"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/AnswerAuthor"
	        android:layout_toRightOf="@+id/AnswerUpvoteButton"
	        android:paddingLeft="30dp"
	        android:text="Answer Date"
	        android:textAppearance="?android:attr/textAppearanceSmall" />
	     
	     <Button
            android:id="@+id/AnswerUpvoteButton"
	        style="?android:attr/buttonStyleSmall"
	        android:layout_width="20dp"
	        android:layout_height="28dp"
	        android:layout_alignTop="@+id/AnswerText"
	        android:layout_alignParentLeft="true"
	        android:adjustViewBounds="true"
	        android:background="@drawable/upvote_arrow"
	         />
	      
	     <Button
            android:id="@+id/AnswerNovoteButton"
	        style="?android:attr/buttonStyleSmall"
	        android:layout_width="20dp"
	        android:layout_height="28dp"
	        android:layout_alignTop="@+id/AnswerText"
	        android:layout_alignParentLeft="true"
	        android:adjustViewBounds="true"
	        android:background="@drawable/novote_arrow"
	        android:visibility="invisible"
	         />
	      
	     <TextView 
	        android:id="@+id/AnswerUpvoteNumber"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/AnswerUpvoteButton"
			android:layout_alignParentLeft="true"
			android:paddingLeft="6dp"
	        android:text="0"
	        android:textAppearance="?android:attr/textAppearanceSmall" />
	     
	   <ListView
        android:id="@+id/AnswerReplyList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:paddingLeft="30dp" >
    </ListView>
	

</RelativeLayout>