<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ca.ualberta.cs.f14t07_application.BrowseActivity" >

    <TextView
        android:id="@+id/browseTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="Browse"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/browseViewByText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/browseTextView"
        android:layout_below="@+id/browseTextView"
        android:text="view by"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <Button
        android:id="@+id/browseViewByButton"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/browseTextView"
        android:layout_toRightOf="@+id/browseViewByText"
        android:background="@drawable/downarrow"
        android:minHeight="25dp"
        android:minWidth="25dp" />

    <ListView
        android:id="@+id/browseListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/browseViewByText"
        android:layout_below="@+id/browseViewByText" >
    </ListView>

</RelativeLayout>
