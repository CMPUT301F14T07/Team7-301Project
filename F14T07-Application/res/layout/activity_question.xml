<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ca.ualberta.cs.views.QuestionActivity" >

    <Button
        android:id="@+id/AddButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/QuestionAnswerList"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/QuestionAnswerList"
        android:text="@string/add_answer" />

    <TextView
        android:id="@+id/QuestionSubject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/QuestionSaveButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/QuestionSaveButton"
        android:text="Question Subject"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/AnswerListIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/QuestionReplyList"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:text="@string/answers_indicator"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <ListView
        android:id="@+id/QuestionAnswerList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_alignLeft="@+id/ReplyAnswerIndicator"
        android:layout_below="@+id/AnswerListIndicator"
        android:paddingLeft="30dp" >
    </ListView>
	
	    <Button
         android:id="@+id/QuestionSaveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="+Save" />

	    <ImageView
	        android:id="@+id/picture"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignBottom="@+id/QuestionText"
	        android:layout_alignLeft="@+id/QuestionSubject"
	        android:layout_alignTop="@+id/QuestionText"
	        />

	    <ListView
	        android:id="@+id/QuestionReplyList"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/QuestionText"
	        android:layout_toLeftOf="@+id/QuestionSaveButton" >
	    </ListView>

	    <TextView
	        android:id="@+id/QuestionText"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/QuestionSubject"
	        android:layout_marginLeft="22dp"
	        android:layout_toRightOf="@+id/imageView1"
	        android:paddingLeft="30dp"
	        android:text="Question Text"
	        android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>