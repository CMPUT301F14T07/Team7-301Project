<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ca.ualberta.cs.views.QuestionActivity" >
	
<LinearLayout 
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >    
    
    <RelativeLayout 
        android:id="@+id/SubjectAndSaveButton"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        >
    
		<Button
    	    android:id="@+id/QuestionSaveButton"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_alignParentRight="true"
        	android:layout_alignParentTop="true"
        	android:text="+Save" />

    	<TextView
        	android:id="@+id/QuestionSubject"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_alignParentLeft="true"
        	android:layout_alignParentTop="true"
        	android:layout_toLeftOf="@+id/QuestionSaveButton"
        	android:text="Question Subject"
        	android:textAppearance="?android:attr/textAppearanceLarge" />
    
    </RelativeLayout>

    <RelativeLayout 
        android:id="@+id/Question"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="2" >
    
    <ScrollView 
   		android:id="@+id/QuestionScroller"
    	android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
   	    android:layout_toRightOf="@+id/QuestionUpvoteButton"
        android:paddingLeft="30dp" >
    
    
	    <TextView
        	android:id="@+id/QuestionText"
    	    android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
        	android:text="Question Text"
        	android:textAppearance="?android:attr/textAppearanceMedium"
        	android:scrollbars = "vertical" />
    
    </ScrollView>
	    
     <TextView 
        android:id="@+id/QuestionAuthor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/QuestionScroller"
        android:layout_toRightOf="@+id/QuestionUpvoteButton"
        android:paddingLeft="30dp"
        android:text="Question Author"
        android:textAppearance="?android:attr/textAppearanceSmall" />
	     
     <TextView 
        android:id="@+id/QuestionDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/QuestionAuthor"
        android:layout_toRightOf="@+id/QuestionUpvoteButton"
        android:paddingLeft="30dp"
        android:text="Question Date"
        android:textAppearance="?android:attr/textAppearanceSmall" />
	     
     <Button
        android:id="@+id/QuestionUpvoteButton"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="25dp"
        android:layout_height="35dp"
        android:layout_alignTop="@+id/QuestionScroller"
        android:layout_alignParentLeft="true"
        android:adjustViewBounds="true"
        android:background="@drawable/upvote_arrow" />
	      
     <Button
        android:id="@+id/QuestionNovoteButton"
		style="?android:attr/buttonStyleSmall"
        android:layout_width="25dp"
        android:layout_height="35dp"
        android:layout_alignTop="@+id/QuestionScroller"
        android:layout_alignParentLeft="true"
        android:adjustViewBounds="true"
        android:background="@drawable/novote_arrow"
        android:visibility="invisible" />
	      
     <TextView 
        android:id="@+id/QuestionUpvoteNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/QuestionUpvoteButton"
		android:layout_alignParentLeft="true"
		android:paddingLeft="7dp"
        android:text="0"
        android:textAppearance="?android:attr/textAppearanceSmall" />
          
	<ListView
        android:id="@+id/QuestionReplyList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/QuestionDate"
        android:layout_toRightOf="@+id/QuestionUpvoteNumber" >
	</ListView>
	
	</RelativeLayout>
	
    <TextView
        android:id="@+id/AnswerListIndicator"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:text="@string/answers_indicator"
        android:textAppearance="?android:attr/textAppearanceMedium" />
     
    <ListView
        android:id="@+id/QuestionAnswerList"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:paddingLeft="30dp" >
    </ListView>
    
    
	<Button
	    android:id="@+id/AddAnswerButton"
	    android:layout_width="fill_parent"
	    android:layout_height="0dp"
	    android:layout_weight="1"
	    android:gravity="center"
	    android:text="@string/add_answer" />
    

</LinearLayout>
</ScrollView>